<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".hotels.HostelsAll">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Categories-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hotels_button"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/blue">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Hotels  "
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/apartments_button"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_marginLeft="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Apartments  "
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hostels_button"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/yellow"
                        android:layout_marginLeft="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Hostels  "
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/guesthouses_button"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_marginLeft="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Guesthouses  "
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
